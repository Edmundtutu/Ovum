<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Ovum" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/deep_pink</item>
    </style>

    <style name="Base.Widget.Material3.BottomNavigationView." parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/deep_pink</item>
    </style>

    <style name="Theme.Ovum" parent="Base.Theme.Ovum" />
    <style name="MyTextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:background">@drawable/custom_edit_text_background</item>
        <item name="shapeAppearanceOverlay">@style/RoundedCorners</item>
    </style>

    <style name="RoundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">80dp</item>
    </style>

    <color name="pale_hint_color">#80FFFFFF</color>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>


    <style name="CustomDialog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">stateVisible|adjustResize</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/CustomDialogAnimation</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CustomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>


    <style name="HorizontalCalendar" />

    <style name="HorizontalCalendar.Text">
        <item name="android:textSize">@dimen/horizontalCalendarTextSize</item>
    </style>

    <style name="HorizontalCalendar.Text.DeselectedDayOfWeek">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/black_50</item>
    </style>

    <style name="HorizontalCalendar.Text.DeselectedDayOfMonth">
        <item name="android:fontFamily">@font/barlow_semi_condensed_bold</item>
        <item name="android:textColor">@color/pale_pink</item>
    </style>

    <style name="HorizontalCalendar.Text.SelectedDayOfMonth">
        <item name="android:fontFamily">@font/barlow_semi_condensed_black</item>
        <item name="android:textColor">@color/pale_pink</item>
    </style>

</resources>