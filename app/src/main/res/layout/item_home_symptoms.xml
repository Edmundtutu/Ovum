<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:padding="16dp">

    <TextView
        android:id="@+id/home_day_of_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mon"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/home_day_of_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_day_of_week"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/event_title_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/Symptom.CardDeselected"
        app:layout_constraintStart_toEndOf="@id/home_day_of_month"
        app:layout_constraintTop_toTopOf="@id/home_day_of_week"
        app:layout_constraintBottom_toBottomOf="@id/home_day_of_month"
        app:layout_constraintEnd_toStartOf="@id/hide_view"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/symptom_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Was feeling Anger"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:padding="8dp"/>
    </androidx.cardview.widget.CardView>
    <ImageView
        android:id="@+id/hide_view"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_eye_closed"
        app:layout_constraintStart_toEndOf="@id/event_title_card"
        app:layout_constraintTop_toTopOf="@id/home_day_of_week"
        app:layout_constraintBottom_toBottomOf="@id/home_day_of_month"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/symptom_logged_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Scheduled"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/event_title_card"
        app:layout_constraintStart_toStartOf="@id/event_title_card"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
