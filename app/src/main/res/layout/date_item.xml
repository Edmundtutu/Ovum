<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parentView">

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/day_text"
        android:text="M"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_margin="16dp"
        style="@style/HorizontalCalendar.Text.DeselectedDayOfWeek"
        app:layout_constraintBottom_toTopOf="@+id/date_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintWidth_percent="0.25"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="1"
        android:id="@+id/date_text"
        android:gravity="center"
        android:background="@drawable/horizontal_background_default"
        style="@style/HorizontalCalendar.Text.DeselectedDayOfMonth"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/day_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintWidth_percent="0.25" />

</androidx.constraintlayout.widget.ConstraintLayout>
